{% extends '::base.html.twig'%}

{% block body %}
    <div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1 >LE COMPARATEUR AGRICOLE</h1>
            <h3>Bienvenue sur le <b>comparateur agricole</b>. 1er site qui permet de vendre ou d'acheter du bl√©. </h3>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10">
                <div class="row">
                    <button type="submit" class="btn btn-success col-xs-offset-2 col-xs-3" data-toggle="modal" href="#agri">Je suis <b>AGRICULTEUR</b></button>

                    <button type="submit" class="btn btn-warning col-xs-offset-2 col-xs-3" data-toggle="modal" href="#acheteur">Je suis <b>ACHETEUR</b></button>
                </div>
            </div>
        </div>
    </div>


    {#        Modal pour le button Agriculteur#}

    <div class="modal fade" id="agri">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Je suis Agriculteur</h4>
                </div>
                <div class="modal-body">
                    Je recherche une offre dans le :
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" value="Edit" />

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                    {{ form_end(form) }}
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-->
    </div>


    {#   Modal pour les Acheteurs#}


    <div class="modal fade" id="acheteur">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Je suis Acheteur</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(offres) }}
                   {{ form_widget (offres) }}
                    {{ form_end(offres) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


{% endblock %}