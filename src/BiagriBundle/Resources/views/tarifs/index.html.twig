{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tarifs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Km</th>
                <th>Rouen</th>
                <th>Ide</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <td><a href="{{ path('tarifs_show', { 'id': tarif.id }) }}">{{ tarif.id }}</a></td>
                <td>{{ tarif.km }}</td>
                <td>{{ tarif.rouen }}</td>
                <td>{{ tarif.iDE }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tarifs_show', { 'id': tarif.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tarifs_edit', { 'id': tarif.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tarifs_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
